<link rel="stylesheet" href="../public/assets/css/burger_style.css">

<div class="container center-align">

  <div class="title row">
    <h1>Eat Da Burger</h1>
  </div>

  <div class="order-burger row">
    <h2>Order a Burger</h2>
    
      <div class="order-input row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">mode_edit</i>
              <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
              <label for="icon_prefix2">First Name</label>
            </div>
          </div>
        </form>
        <a id="eat-btn" class="btn-medium green">Order</a>
      </div> <!-- order-input -->

  </div> <!-- order-burger -->

  <div class="burger-board row">
    <div class="ordered-burgers col s6">
      <h2>Burgers</h2>
        <span class="material-icons md-48">lunch_dining</span>
      <ul>
        {{#each burger}}
          {{#unless devoured}}
            {{> burger/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div> <!-- ordered-burgers -->

    <div class="devoured-burgers col s6">
      <h2>Devoured!</h2>

      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{> burger/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div> <!-- devoured-burgers -->
  </div> <!-- burger-board -->

  <a id="eat-btn" class="btn-large green">Eat Da Burger!</a>

</div> <!-- container -->