<h1>Eat Da Burger</h1>

<h2>Burgers</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Order Burger!</button>
</form>
