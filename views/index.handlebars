<link rel="stylesheet" href="../public/assets/css/burger_style.css">

<div class="container">
  <div class="title">
    <h1>Eat Da Burger</h1>
  </div>

  <div class="order-burger">
    <h2>Order a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger type:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Order Burger!</button>
    </form>
  </div> <!-- order-burger -->

  <div class="burger-board">
    <div class="ordered-burgers">
      <h2>Burgers</h2>

      <ul>
        {{#each burger}}
          {{#unless devoured}}
            {{> burger/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div> <!-- ordered-burgers -->

    <div class="devoured-burgers">
      <h2>Devoured!</h2>

      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{> burger/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div> <!-- devoured-burgers -->
  </div> <!-- burger-board -->
</div> <!-- container -->